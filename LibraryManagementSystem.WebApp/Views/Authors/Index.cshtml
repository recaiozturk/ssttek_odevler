
@model List<AuthorViewModel>

@{
    ViewData["Title"] = ViewBag.Title;
}

<h1>Yazarlar</h1>
@if (User.IsInRole("SuperAdmin"))
{
<a asp-controller="Authors" asp-action="Create" class="btn btn-success mt-3">Yazar Ekle</a>
}


@if (Model.Count > 0)
{
    <table class="mt-3 table">
        <thead>
            <tr>
                <th scope="col">Yazar İsmi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr class="align-middle">
                    <td><a class="my-link" asp-controller="Authors" asp-action="Detail" asp-route-id="@author.Id" asp-route-authorTitle="@UrlHelper.ToUrlFriendly(author.Name)">@author.Name</a></td>
                    <td>
                        <div>
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <a asp-controller="Authors" asp-action="Update" asp-route-id="@author.Id" asp-route-authorTitle="@UrlHelper.ToUrlFriendly(author.Name)" class="btn btn-outline-warning">Güncelle</a>
                                <a asp-controller="Authors" asp-action="Delete" asp-route-id="@author.Id" class="btn btn-outline-danger">Sil</a>
                            }

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h3 class="mt-3">Kütüphanede yazar bulunmamaktadır.Lütfen yazar ekleyiniz</h3>
}




