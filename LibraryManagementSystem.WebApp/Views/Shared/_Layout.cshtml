<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryManagementSystem.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Kütüphane Yönetim Sistemi </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Authors" asp-action="Index">Yazarlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Books" asp-action="Index" asp-route-pageNumber="1">Kitaplar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Books" asp-action="Search">Kitap Ara</a>
                        </li>


                    </ul>
                    <ul style="margin-right:60px" class=" navbar-nav ms-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @{ string title = (User.Identity.IsAuthenticated ? User.Identity.Name : "Giriş Yap");}

                                @title
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="SignIn">Giriş Yap</a></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="SignUp">Kayıt Ol</a></li>
                                }

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Profile">Profile Git</a></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="SignOut">Çıkış Yap</a></li>
                                }

                            </ul>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>


        @if (ViewData["Offer"] != null)
        {
            <div id="offer-area" class="p-1 bg-info">
                <h4 class="navbar-brand text-center">@ViewData["Offer"]</h4>
            </div>
        }


    </header>
    <div class="container">
        <main role="main" class="mt-5 pb-3 ">

            <partial name="_Error" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Kütüphane Yönetim Sistemi
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
